    'mov': {'pos_1':'$','pos_2':'/','pos_3':'$'},'rldi': {'pos_1':'i','pos_2':'@','pos_3':'@'},'str': {'pos_1':'$','pos_2':'@','pos_3':'@'},'ldr': {'pos_1':'@','pos_2':'@','pos_3':'$'},'pin': {'pos_1':'&','pos_2':'/','pos_3':'$'},'pout': {'pos_1':'$','pos_2':'/','pos_3':'&'},'pinr': {'pos_1':'&','pos_2':'@','pos_3':'@'},'poutr': {'pos_1':'@','pos_2':'@','pos_3':'&'},
