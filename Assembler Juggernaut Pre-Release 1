    'or': {'pos_1':'$','pos_2':'$','pos_3':'$'},'xor': {'pos_1':'$','pos_2':'$','pos_3':'$'},'nand': {'pos_1':'$','pos_2':'$','pos_3':'$'},'nor': {'pos_1':'$','pos_2':'$','pos_3':'$'},'xnor': {'pos_1':'$','pos_2':'$','pos_3':'$'},'bsu': {'pos_1':'$','pos_2':'$','pos_3':'$'},'bsd': {'pos_1':'$','pos_2':'$','pos_3':'$'},'bsur': {'pos_1':'$','pos_2':'$','pos_3':'$'},
